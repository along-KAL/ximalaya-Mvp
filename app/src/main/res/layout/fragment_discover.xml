<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.DiscoverFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/title_logo"
        android:layout_margin="10dp"/>
    <ImageView
        android:id="@+id/discover_search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/search_selector"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/discover_search"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/discover_tab_layout"
            android:layout_below="@+id/discover_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/discover_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">
        </android.support.v4.view.ViewPager>


    </LinearLayout>


</RelativeLayout>
